{% extends 'layout.html.twig' %}

{% block title %} Error {{ error.code }}{% endblock %}

{% block header %} Error {{ error.code}} {% endblock %}

{% block content %}
    {% if error.code == 404 %}
        <h2 class="text-2xl font-bold">Oops! Page not Found</h2>
        <p>Sorry but the page you are looking for does not exist.</p>
        <a href="/"><button class="mt-4 py-2 px-4 text-xl bg-gray-300 dark:bg-gray-800">Back to homepage</button></a>
    {% else %}
        <h2 class="text-2xl font-bold">Oops! Something went wrong!</h2>
        <a href="/"><button class="mt-4 py-2 px-4 text-xl bg-gray-300 dark:bg-gray-800">Back to homepage</button></a>
    {% endif %}
{% endblock %}
